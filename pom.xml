            </dependency>
            <dependency>
                <groupId>net.java.dev.jna</groupId>
                <artifactId>jna-platform</artifactId>
                <version>4.1.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <organization>
        <name>e-hoffman.org</name>
        <url>https://github.com/rexhoffman/</url>
    </organization>
    <developers>
